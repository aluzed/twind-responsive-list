{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/index.tsx"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/setupTests.ts",
    "node_modules"
  ]
}
